<nav class="navbar navbar-expand-lg {{ background }} {{ fixed ? 'fixed-top' : '' }} shadow-sm py-3">
    <div class="container">
        {# Logo à gauche #}
        <a class="navbar-brand d-flex align-items-center" href="{{ path('app_home') }}">
            <div class="navbar-logo-container me-2">
                <img src="{{ asset(logoPath) }}" alt="HandStar Connect" class="navbar-logo">
            </div>
            <span class="fw-bold fs-4 text-primary">HandStar Connect</span>
        </a>

        {# Bouton toggler pour mobile #}
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarHomeContent" aria-controls="navbarHomeContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        {# Menu de navigation et boutons d'action #}
        <div class="collapse navbar-collapse" id="navbarHomeContent">
            {# Menu de navigation au centre #}
            <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                {% for item in menuItems %}
                    <li class="nav-item">
                        <a class="nav-link {{ item.active is defined and item.active ? 'active fw-semibold' : '' }} px-3" href="{{ item.href }}">
                            {{ item.text }}
                            {% if item.active is defined and item.active %}<span class="visually-hidden">(current)</span>{% endif %}
                        </a>
                    </li>
                {% endfor %}
            </ul>

            {# Boutons d'action à droite #}
            <div class="d-flex gap-2">
                <a href="{{ registerPath }}" class="btn btn-outline-primary px-4 fw-semibold">
                    S'inscrire
                </a>
                <a href="{{ loginPath }}" class="btn btn-primary px-4 fw-semibold">
                    Se connecter
                </a>
            </div>
        </div>
    </div>
</nav>
