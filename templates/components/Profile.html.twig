<div class="profile-container">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white py-3">
            <h3 class="card-title mb-0">
                <i class="bi bi-person-circle me-2"></i>
                Mon Profil
            </h3>
        </div>
        <div class="card-body p-4">
            {% if user %}
                <div class="row">
                    <div class="col-md-4 text-center mb-4">
                        <div class="profile-avatar mb-3">
                            <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center mx-auto text-white fw-bold"
                                 style="width: 120px; height: 120px; font-size: 3rem;">
                                {{ user.email|first|upper }}
                            </div>
                        </div>
                        <h4 class="mb-1">{{ user.email }}</h4>
                        <p class="text-muted mb-0">
                            <i class="bi bi-person-badge me-1"></i>
                            {{ user.roles|join(', ') }}
                        </p>
                    </div>

                    <div class="col-md-8">
                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h5 class="card-title mb-0">Informations personnelles</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label text-muted small mb-1">Email</label>
                                        <div class="form-control bg-light">{{ user.email }}</div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label text-muted small mb-1">Rôles</label>
                                        <div class="form-control bg-light">{{ user.roles|join(', ') }}</div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label text-muted small mb-1">Compte créé le</label>
                                        <div class="form-control bg-light">
                                            {{ user.createdAt ? user.createdAt|date('d/m/Y H:i') : 'Non disponible' }}
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label text-muted small mb-1">Dernière mise à jour</label>
                                        <div class="form-control bg-light">
                                            {{ user.updatedAt ? user.updatedAt|date('d/m/Y H:i') : 'Non disponible' }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header bg-light">
                                <h5 class="card-title mb-0">Sécurité du compte</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <div class="d-flex align-items-center justify-content-between">
                                            <div>
                                                <h6 class="mb-1">Mot de passe</h6>
                                                <p class="text-muted small mb-0">Dernière modification il y a 30 jours</p>
                                            </div>
                                            <button class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-key me-1"></i>
                                                Modifier
                                            </button>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="d-flex align-items-center justify-content-between">
                                            <div>
                                                <h6 class="mb-1">Authentification à deux facteurs</h6>
                                                <p class="text-muted small mb-0">Non activée</p>
                                            </div>
                                            <button class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-shield-lock me-1"></i>
                                                Activer
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <div class="d-flex align-items-center justify-content-between">
                                            <div>
                                                <h6 class="mb-1">Sessions actives</h6>
                                                <p class="text-muted small mb-0">1 session active</p>
                                            </div>
                                            <button class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-laptop me-1"></i>
                                                Gérer
                                            </button>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="d-flex align-items-center justify-content-between">
                                            <div>
                                                <h6 class="mb-1">Notifications par email</h6>
                                                <p class="text-muted small mb-0">Activées</p>
                                            </div>
                                            <button class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-bell me-1"></i>
                                                Configurer
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-4 d-flex gap-2">
                    <button class="btn btn-primary">
                        <i class="bi bi-pencil me-2"></i>
                        Modifier le profil
                    </button>
                    <button class="btn btn-outline-secondary">
                        <i class="bi bi-download me-2"></i>
                        Exporter mes données
                    </button>
                    <button class="btn btn-outline-danger ms-auto">
                        <i class="bi bi-trash me-2"></i>
                        Supprimer mon compte
                    </button>
                </div>
            {% else %}
                <div class="text-center py-5">
                    <div class="text-muted mb-3">
                        <i class="bi bi-person-x fs-1"></i>
                    </div>
                    <h4 class="mb-2">Utilisateur non connecté</h4>
                    <p class="text-muted mb-4">Veuillez vous connecter pour voir votre profil.</p>
                    <a href="{{ path('app_login') }}" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right me-2"></i>
                        Se connecter
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<style>
    .profile-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .profile-avatar {
        transition: transform 0.3s ease;
    }

    .profile-avatar:hover {
        transform: scale(1.05);
    }

    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .card-header {
        border-bottom: none;
    }

    .form-control.bg-light {
        border: 1px solid #dee2e6;
        padding: 0.75rem;
        border-radius: 0.375rem;
        min-height: 45px;
        display: flex;
        align-items: center;
    }
</style>
